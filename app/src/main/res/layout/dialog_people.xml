<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/materialBlack"
        android:src="@drawable/ic_people_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="4dp"
            android:elevation="16dp"
            android:backgroundTint="@android:color/white">
            <TextView
                android:id="@+id/dialog_people_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_margin="8dp"
                android:text="#Default Intro" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/dialog_people_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Default Name"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dialog_people_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:text="Default email" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_margin="12dp">

        <Button
            android:id="@+id/btn_people_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/materialGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소" />
        <Button
            android:id="@+id/btn_people_ok"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/materialGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대화하기" />

    </LinearLayout>


</LinearLayout>


